{
  "id": "copilot-for-hbuilderx",
  "name": "copilot-for-hbuilderx",
  "description": "Your AI pair programmer",
  "displayName": "GitHub Copilot",
  "version": "0.5.0",
  "publisher": "zhetengbiji",
  "engines": {
    "HBuilderX": "^3.8.5",
    "vscode": "^1.75.0",
    "node": ">=16.14.0",
    "npm": ">=8.0.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Education",
    "Snippets"
  ],
  "keywords": [
    "ai",
    "openai",
    "codex",
    "pilot",
    "snippets",
    "documentation",
    "autocomplete",
    "intellisense",
    "refactor",
    "javascript",
    "python",
    "typescript",
    "php",
    "go",
    "golang",
    "ruby",
    "c++",
    "c#",
    "java",
    "kotlin",
    "co-pilot"
  ],
  "scripts": {
    "vscode:prepublish": "npm run build",
    "prepack": "npm run build",
    "postpack": "node scripts/zip.js",
    "build": "esbuild ./src/index.ts --bundle --outfile=out/index.js --external:vscode --format=cjs --platform=node --minify --drop:console",
    "watch": "tsc -watch -p ./"
  },
  "main": "./out/index.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "title": "GitHub Copilot",
      "properties": {
        "GithubCopilot.status.show": {
          "type": "string",
          "default": "auto",
          "description": "状态显示",
          "enum": [
            "auto",
            "icon",
            "icon+text"
          ],
          "enumDescriptions": [
            "自动",
            "仅图标",
            "图标+文本"
          ]
        },
        "GithubCopilot.editor.enableAutoCompletions": {
          "type": "boolean",
          "default": true,
          "description": "自动显示行内补全"
        },
        "GithubCopilot.enable": {
          "type": "string",
          "default": "*=true,plaintext=false,markdown=false,scminput=false",
          "description": "启用或禁用指定语言的自动补全",
          "markdownDescription": "启用或禁用指定[语言](https://code.visualstudio.com/docs/languages/identifiers)的自动补全"
        },
        "GithubCopilot.proxy.enable": {
          "type": "boolean",
          "default": false,
          "description": "使用代理服务"
        },
        "GithubCopilot.proxy.strictSSL": {
          "type": "boolean",
          "default": true,
          "description": "代理服务使用严格SSL"
        },
        "GithubCopilot.proxy.host": {
          "type": "string",
          "default": "",
          "description": "代理服务地址（主机名:端口）"
        },
        "GithubCopilot.proxy.user": {
          "type": "string",
          "default": "",
          "description": "代理服务用户（用户名:密码）"
        }
      }
    },
    "commands": [
      {
        "command": "copilot.status",
        "title": "Copilot Status"
      },
      {
        "command": "copilot.chat.start",
        "title": "开始代码聊天"
      },
      {
        "command": "copilot.chat.explain",
        "title": "对此进行解释"
      },
      {
        "command": "copilot.chat.fix",
        "title": "修复此"
      },
      {
        "command": "copilot.chat.generateDocs",
        "title": "生成文档"
      },
      {
        "command": "copilot.chat.generateTests",
        "title": "生成测试"
      }
    ],
    "submenus": [
      {
        "id": "copilot.chat",
        "label": "GitHub Copilot"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "copilot.chat",
          "id": "copilotChatAction",
          "title": "GitHub Copilot",
          "group": "1copilotChat@0"
        },
        {
          "command": "copilot.chat.start",
          "group": "copilotChat@1"
        },
        {
          "command": "copilot.chat.explain",
          "group": "copilotChatAction@1"
        },
        {
          "command": "copilot.chat.fix",
          "group": "copilotChatAction@2"
        },
        {
          "command": "copilot.chat.generateDocs",
          "group": "copilotChatAction@3"
        },
        {
          "command": "copilot.chat.generateTests",
          "group": "copilotChatAction@4"
        }
      ],
      "copilot.chat": [
        {
          "command": "copilot.chat.start",
          "group": "copilotChat@1"
        },
        {
          "command": "copilot.chat.explain",
          "group": "copilotChatAction@1"
        },
        {
          "command": "copilot.chat.fix",
          "group": "copilotChatAction@2"
        },
        {
          "command": "copilot.chat.generateDocs",
          "group": "copilotChatAction@3"
        },
        {
          "command": "copilot.chat.generateTests",
          "group": "copilotChatAction@4"
        }
      ]
    },
    "icons": {
      "copilot-enable": {
        "description": "copilot enable",
        "default": {
          "fontPath": "iconfont.woff",
          "fontCharacter": "\\0041"
        }
      },
      "copilot-loading": {
        "description": "copilot loading",
        "default": {
          "fontPath": "iconfont.ttf",
          "fontCharacter": "\\EB19"
        }
      },
      "copilot-warning": {
        "description": "copilot warning",
        "default": {
          "fontPath": "iconfont.woff",
          "fontCharacter": "\\0042"
        }
      },
      "copilot-disable": {
        "description": "copilot disable",
        "default": {
          "fontPath": "iconfont.woff",
          "fontCharacter": "\\0043"
        }
      }
    }
  },
  "extensionDependencies": [],
  "dependencies": {
    "vscode-jsonrpc": "^8.2.0"
  },
  "devDependencies": {
    "@types/node": "^16",
    "@types/node-fetch": "^2.6.9",
    "@types/uuid": "^9.0.7",
    "@types/vscode": "^1.83.1",
    "esbuild": "^0.19.5",
    "node-fetch": "^2.7.0",
    "typescript": "^5.2.2",
    "uuid": "^9.0.1"
  }
}
